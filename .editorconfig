# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

# Indentation
indent_style = space
indent_size = 4
tab_width = 4

# C# files
[*.cs]

# Use file-scoped namespaces (error if not used)
csharp_style_namespace_declarations = file_scoped:error

# Prefer 'var' when the type is apparent
csharp_style_var_when_type_is_apparent = true:suggestion
# Prefer explicit type when type is not apparent
csharp_style_var_elsewhere = false:suggestion

# Prefer expression-bodied members
csharp_style_expression_bodied_methods = when_on_single_line:suggestion
csharp_style_expression_bodied_properties = when_on_single_line:suggestion

# Prefer using 'this.' for member access
dotnet_style_qualification_for_field = true:suggestion
dotnet_style_qualification_for_property = true:suggestion
dotnet_style_qualification_for_method = false:suggestion
dotnet_style_qualification_for_event = false:suggestion

# Prefer 'readonly' for struct members
dotnet_style_readonly_field = true:suggestion

# Naming conventions
dotnet_naming_rule.private_members_should_be_camel_case.severity = suggestion
dotnet_naming_rule.private_members_should_be_camel_case.symbols = private_fields
dotnet_naming_rule.private_members_should_be_camel_case.style = camel_case_style

dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private
dotnet_naming_symbols.private_fields.required_modifiers =

dotnet_naming_style.camel_case_style.capitalization = camel_case

# Analyzer severity example
dotnet_diagnostic.IDE0051.severity = suggestion  # Remove unused private members

# File header (optional)
file_header_template = Copyright (c) 2025 Your Company. All rights reserved.

# End of C# section

# JSON files
[*.json]
indent_style = space
indent_size = 2

# XML files
[*.xml]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
